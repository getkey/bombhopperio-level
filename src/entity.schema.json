
{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://bombhopper.io/entity.schema.json",
	"definitions": {
		"point": {
			"type": "object",
			"additionalProperties": false,
			"required": ["x", "y"],
			"properties": {
				"x": {
					"type": "number"
				},
				"y": {
					"type": "number"
				}
			}
		},
		"anchor": {
			"allOf": [
				{
					"$ref": "#/definitions/point"
				},
				{
					"type": "object",
					"properties": {
						"x": {
							"type": "number",
							"minimum": 0,
							"maximum": 1
						},
						"y": {
							"type": "number",
							"minimum": 0,
							"maximum": 1
						}
					}
				}
			]
		},
		"entity_base": {
			"type": "object",
			"additionalProperties": false,
			"required": ["type", "params"],
			"properties": {
				"type": {
					"type": "string"
				},
				"params": {
					"type": "object"
				}
			}
		},
		"vertices": {
			"type": "array",
			"minItems": 3,
			"items": { "$ref": "#/definitions/point" },
			"polygon": true
		},
		"color": {
			"type": "integer",
			"minimum": 0,
			"maximum": 16777215
		},
		"opacity": {
			"type": "number",
			"minimum": 0,
			"maximum": 1
		},
		"block_entity": {
			"allOf": [
				{
					"$ref": "#/definitions/entity_base"
				},
				{
					"type": "object",
					"properties": {
						"type": {
							"enum": ["normal", "ice", "bouncy", "breakable", "deadly"]
						},
						"params": {
							"oneOf": [
								{
									"type": "object",
									"additionalProperties": false,
									"required": ["vertices"],
									"properties": {
										"isStatic": {
											"type": "boolean"
										},
										"vertices": {
											"$ref": "#/definitions/vertices"
										}
									}
								},
								{
									"type": "object",
									"additionalProperties": false,
									"required": ["x", "y", "radius"],
									"properties": {
										"isStatic": {
											"type": "boolean"
										},
										"x": {
											"type": "number"
										},
										"y": {
											"type": "number"
										},
										"radius": {
											"type": "number",
											"exclusiveMinimum": 0
										}
									}
								}
							]
						}
					}
				}
			]
		},
		"paint_entity": {
			"allOf": [
				{
					"$ref": "#/definitions/entity_base"
				},
				{
					"type": "object",
					"properties": {
						"type": {
							"const": "paint"
						},
						"params": {
							"type": "object",
							"additionalProperties": false,
							"required": ["vertices", "fillColor"],
							"properties": {
								"vertices": {
									"$ref": "#/definitions/vertices"
								},
								"fillColor": {
									"$ref": "#/definitions/color"
								},
								"opacity": {
									"$ref": "#/definitions/opacity"
								}
							}
						}
					}
				}
			]
		},
		"text_entity": {
			"allOf": [
				{
					"$ref": "#/definitions/entity_base"
				},
				{
					"type": "object",
					"properties": {
						"type": {
							"const": "text"
						},
						"params": {
							"type": "object",
							"additionalProperties": false,
							"required": ["x", "y", "copy", "anchor"],
							"properties": {
								"x": {
									"type": "number"
								},
								"y": {
									"type": "number"
								},
								"copy": {
									"type": "object",
									"required": ["en"],
									"additionalProperties": {
										"type": "string"
									},
									"properties": {
										"en": {
											"type": "string"
										}
									}
								},
								"anchor": { "$ref": "#/definitions/anchor" },
								"angle": {
									"type": "number"
								},
								"opacity": {
									"$ref": "#/definitions/opacity"
								},
								"align": {
									"enum": ["left", "center", "right", "justify"]
								},
								"fillColor": {
									"$ref": "#/definitions/color"
								}
							}
						}
					}
				}
			]
		},
		"door_entity": {
			"allOf": [
				{
					"$ref": "#/definitions/entity_base"
				},
				{
					"type": "object",
					"properties": {
						"type": {
							"const": "endpoint"
						},
						"params": {
							"type": "object",
							"additionalProperties": false,
							"required": ["x", "y", "isStatic", "angle"],
							"properties": {
								"x": {
									"type": "number"
								},
								"y": {
									"type": "number"
								},
								"isStatic": {
									"type": "boolean"
								},
								"rightFacing": {
									"type": "boolean"
								},
								"angle": {
									"type": "number"
								},
								"destination": {
									"type": "string",
									"format": "uuid"
								}
							}
						}
					}
				}
			]
		},
		"hoppi_entity": {
			"allOf": [
				{
					"$ref": "#/definitions/entity_base"
				},
				{
					"type": "object",
					"properties": {
						"type": {
							"const": "player"
						},
						"params": {
							"oneOf": [
								{
									"type": "object",
									"additionalProperties": false,
									"required": ["x", "y", "angle", "magazine"],
									"properties": {
										"x": {
											"type": "number"
										},
										"y": {
											"type": "number"
										},
										"isStatic": {
											"type": "boolean"
										},
										"rightFacing": {
											"type": "boolean"
										},
										"angle": {
											"type": "number"
										},
										"magazine": {
											"type": "array",
											"items": {
												"enum": ["grenade", "bullet", "empty"]
											}
										}
									}
								},
								{
									"type": "object",
									"additionalProperties": false,
									"required": ["x", "y", "angle", "infiniteAmmo"],
									"properties": {
										"x": {
											"type": "number"
										},
										"y": {
											"type": "number"
										},
										"isStatic": {
											"type": "boolean"
										},
										"rightFacing": {
											"type": "boolean"
										},
										"angle": {
											"type": "number"
										},
										"infiniteAmmo": {
											"enum": ["grenade", "bullet"]
										}
									}
								}
							]
						}
					}
				}
			]
		}
	},
	"title": "Entity",
	"description": "A BombHopper.io entity",
	"oneOf": [
		{
			"$ref": "#/definitions/block_entity"
		},
		{
			"$ref": "#/definitions/paint_entity"
		},
		{
			"$ref": "#/definitions/text_entity"
		},
		{
			"$ref": "#/definitions/door_entity"
		},
		{
			"$ref": "#/definitions/hoppi_entity"
		}
	]
}
